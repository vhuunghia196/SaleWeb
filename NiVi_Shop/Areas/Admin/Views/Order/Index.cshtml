@{
    ViewBag.Title = "Đơn đặt";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader {

    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Order</a>
        </li>
    </ul>
}
<div class="card">
    <div class="card-header p-2">
        <ul class="nav nav-pills">
            <li class="nav-item"><a class="nav-link active" href="#Decor" id="view-tab" data-toggle="tab">View</a></li>
            <li class="nav-item"><a class="nav-link" href="#Chair" id="add-tab" data-toggle="tab">ADD</a></li>
            <li class="nav-item"><a class="nav-link" href="#Update" id="update-tab" data-toggle="tab" style="pointer-events:none">UPDATE</a></li>
        </ul>
    </div><!-- /.card-header -->
    <div class="card-body">
        <div class="tab-content">
            <div class="tab-pane active" id="Decor">
                <!-- Main content -->
                <section class="content">

                    <!-- Default box -->
                    <div class="card">
                        <div class="card-body">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Name</th>
                                        <th width="20%">Phone number</th>
                                        <th>Address</th>
                                        <th>Company</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr id="@item.SupplierID">
                                                <td>@item.SupplierID</td>
                                                <td class="name-supplier">@item.Name</td>
                                                <td class="phone-supplier">@item.PhoneNumber</td>
                                                <td class="address-supplier">@item.Address</td>
                                                <td class="company-supplier">@item.CompanyName</td>
                                                <td>
                                                    <button class="btn btn-danger remove-supplier">Remove</button>
                                                    <button class="btn btn-primary update-supplier">Update</button>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="8">No supplier</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                        </div>
                        <!-- /.card-footer-->
                    </div>
                    <!-- /.card -->

                </section>
            </div>
            <!-- /.tab-pane -->
            <div class="tab-pane" id="Chair">
                <section class="content">
                    <div class="col-md-6">
                        <!-- general form elements -->
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">Quick Example</h3>
                            </div>
                            <!-- /.card-header -->
                            <!-- form start -->
                            @using (Html.BeginForm("Add", "Supplier", FormMethod.Post, new { Action = "/admin/supplier" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary()
                                <div class="card-body">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Name</label>
                                        <input type="text" class="form-control" id="Name" placeholder="Name">
                                        @Html.ValidationMessageFor(m => Model, "Please enter supplier name.")
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Phone number</label>
                                        <input type="text" class="form-control" id="Phone" placeholder="Phone number">
                                        @Html.ValidationMessageFor(m => Model, "Please enter supplier phone number.")
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Address</label>
                                        <input type="text" class="form-control" id="Address" placeholder="Address">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Company name</label>
                                        <input type="text" class="form-control" id="Company" placeholder="Company name">
                                    </div>
                                </div>
                                <!-- /.card-body -->

                                <div class="card-footer">
                                    <button type="submit" id="submit" class="btn btn-primary">Add</button>
                                </div>
                            }
                        </div>
                        <!-- /.card -->
                    </div>
                </section>
            </div>
            <!-- /.tab-pane -->
            <div class="tab-pane" id="Update">
                <section class="content">
                    <div class="col-md-6">
                        <!-- general form elements -->
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">Quick Example</h3>
                            </div>
                            <!-- /.card-header -->
                            <!-- form start -->
                            @using (Html.BeginForm("Edit", "Supplier", FormMethod.Post, new { Action = "/admin/supplier" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary()
                                <div class="card-body">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">ID</label>
                                        <input type="text" class="form-control" id="ID-update" placeholder="ID" disabled="disabled">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Name</label>
                                        <input type="text" class="form-control" id="Name-update" placeholder="Name">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Phone number</label>
                                        <input type="text" class="form-control" id="Phone-update" placeholder="Phone number">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Address</label>
                                        <input type="text" class="form-control" id="Address-update" placeholder="Address">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Company name</label>
                                        <input type="text" class="form-control" id="Company-update" placeholder="Company name">
                                    </div>
                                </div>
                                <!-- /.card-body -->

                                <div class="card-footer">
                                    <button type="submit" id="update" class="btn btn-primary">Update</button>
                                </div>
                            }
                        </div>
                        <!-- /.card -->
                    </div>
                </section>
            </div>
        </div>
        <!-- /.tab-content -->
    </div><!-- /.card-body -->
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $.ajax({
            url: '@Url.Action("getStatistics", "Statistics")',
            type: 'GET',
            dataType: 'json',
            success: function (data) {
                drawChartProductQuantity(data);
            }
        });
        })

        function drawChartProductQuantity(data) {
            var ctx = document.getElementById('myChart').getContext('2d');
            var myChart = new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: [data[0].CategoryName, data[1].CategoryName, data[2].CategoryName, data[3].CategoryName],
                    datasets: [{
                        label: '# of Votes',
                        data: [data[0].Quantity, data[1].Quantity, data[2].Quantity, data[2].Quantity],
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 206, 86, 0.2)',
                            'rgba(0, 206, 86, 0.2)'
                        ],
                        borderColor: [
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(0, 206, 86, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    title: {
                        display: true,
                        text: 'Biểu đồ tròn'
                    },
                    scales: {
                        yAxes: [{
                            ticks: {
                                beginAtZero: true
                            }
                        }]
                    }
                }
            });
        }

    </script>
}
