@model IEnumerable<NiVi_Shop.Models.Supplier>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
} 

@section naviheader {

    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Supplier</a>
        </li>
    </ul>
}
<div class="card">
    <div class="card-header p-2">
        <ul class="nav nav-pills">
            <li class="nav-item"><a class="nav-link active" href="#Decor" id="view-tab" data-toggle="tab">View</a></li>
            <li class="nav-item"><a class="nav-link" href="#Chair" id="add-tab" data-toggle="tab">ADD</a></li>
            <li class="nav-item"><a class="nav-link" href="#Update" id="update-tab" data-toggle="tab" style="pointer-events:none">UPDATE</a></li>
        </ul>
    </div><!-- /.card-header -->
    <div class="card-body">
        <div class="tab-content">
            <div class="tab-pane active" id="Decor">
                <!-- Main content -->
                <section class="content">

                    <!-- Default box -->
                    <div class="card">
                        <div class="card-body">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Name</th>
                                        <th width="20%">Phone number</th>
                                        <th>Address</th>
                                        <th>Company</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr id="@item.SupplierID">
                                                <td>@item.SupplierID</td>
                                                <td class="name-supplier">@item.Name</td>
                                                <td class="phone-supplier">@item.PhoneNumber</td>
                                                <td class="address-supplier">@item.Address</td>
                                                <td class="company-supplier">@item.CompanyName</td>
                                                <td >
                                                    <button class="btn btn-danger remove-supplier">Remove</button>
                                                    <button class="btn btn-primary update-supplier">Update</button>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="8">No supplier</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                        </div>
                        <!-- /.card-footer-->
                    </div>
                    <!-- /.card -->

                </section>
            </div>
            <!-- /.tab-pane -->
            <div class="tab-pane" id="Chair">
                <section class="content">
                    <div class="col-md-6">
                        <!-- general form elements -->
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">Quick Example</h3>
                            </div>
                            <!-- /.card-header -->
                            <!-- form start -->
                            @using (Html.BeginForm("Add", "Supplier", FormMethod.Post, new { Action = "/admin/supplier" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary()
                                <div class="card-body">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Name</label>
                                        <input type="text" class="form-control" id="Name" placeholder="Name">
                                        @Html.ValidationMessageFor(m => Model, "Please enter supplier name.")
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Phone number</label>
                                        <input type="text" class="form-control" id="Phone" placeholder="Phone number">
                                        @Html.ValidationMessageFor(m => Model, "Please enter supplier phone number.")
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Address</label>
                                        <input type="text" class="form-control" id="Address" placeholder="Address">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Company name</label>
                                        <input type="text" class="form-control" id="Company" placeholder="Company name">
                                    </div>
                                </div>
                                <!-- /.card-body -->

                                <div class="card-footer">
                                    <button type="submit" id="submit" class="btn btn-primary">Add</button>
                                </div>
                            }
                        </div>
                        <!-- /.card -->
                    </div>
                </section>
            </div>
            <!-- /.tab-pane -->
            <div class="tab-pane" id="Update">
                <section class="content">
                    <div class="col-md-6">
                        <!-- general form elements -->
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">Quick Example</h3>
                            </div>
                            <!-- /.card-header -->
                            <!-- form start -->
                            @using (Html.BeginForm("Edit", "Supplier", FormMethod.Post, new { Action = "/admin/supplier" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary()
                                <div class="card-body">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">ID</label>
                                        <input type="text" class="form-control" id="ID-update" placeholder="ID" disabled="disabled">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Name</label>
                                        <input type="text" class="form-control" id="Name-update" placeholder="Name">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Phone number</label>
                                        <input type="text" class="form-control" id="Phone-update" placeholder="Phone number">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Address</label>
                                        <input type="text" class="form-control" id="Address-update" placeholder="Address">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Company name</label>
                                        <input type="text" class="form-control" id="Company-update" placeholder="Company name">
                                    </div>
                                </div>
                                <!-- /.card-body -->

                                <div class="card-footer">
                                    <button type="submit" id="update" class="btn btn-primary" >Update</button>
                                </div>
                            }
                        </div>
                        <!-- /.card -->
                    </div>
                </section>
            </div>
        </div>
        <!-- /.tab-content -->
    </div><!-- /.card-body -->
</div>
@section scripts {
    <script>
        $(document).ready(function () {
            $('body').on('click', '#submit', function () {
                var Name = $("#Name").val();
                var Phone = $("#Phone").val();
                var Address = $("#Address").val();
                var Company = $("#Company").val();
                $.ajax({
                    url: '/admin/supplier/add',
                    type: 'POST',
                    data: {
                        name: Name,
                        phone: Phone,
                        address: Address,
                        company: Company
                    },
                    success: function (rs) {
                        if (rs.success) {
                            location.reload();
                            alert("Success!!")
                        } else {
                            alert("Fail!!")
                        }
                    }
                })
            })
        })
        $(document).ready(function () {
            $('body').on('click', '.remove-supplier', function () {
                var tr = $(this).closest('tr');
                var id = tr.attr('id');
                var conf = confirm('Delete now ???');
                if (conf === true) {
                    $.ajax({
                        url: "/admin/supplier/remove",
                        type: 'POST',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success) {
                                tr.remove();
                                alert("Remove success!!")
                            } else {
                                alert("Remove fail!!")
                            }
                        }
                    })
                }
            })
        })
        $(document).ready(function () {
            $('body').on('click', '.update-supplier', function () {
                $("#update-tab").click();
                var tr = $(this).closest('tr');
                var id = tr.attr('id');
                $("#ID-update").val(id);
                $("#Name-update").val(tr.find(".name-supplier").text());
                $("#Phone-update").val(tr.find(".phone-supplier").text());
                $("#Address-update").val(tr.find(".address-supplier").text());
                $("#Company-update").val(tr.find(".company-supplier").text());
            })
        })
        $(document).ready(function () {
            $('body').on('click', '#update', function () {
                var id = $("#ID-update").val()
                var Name = $("#Name-update").val();
                var Phone = $("#Phone-update").val();
                var Address = $("#Address-update").val();
                var Company = $("#Company-update").val();
                var conf = confirm('Update now ???');
                if (conf === true) {
                    $.ajax({
                        url: "/admin/supplier/edit",
                        type: 'POST',
                        data: {
                            id: id,
                            name: Name,
                            phone: Phone,
                            address: Address,
                            company: Company
                        },
                        success: function (rs) {
                            if (rs.success) {
                                alert("Success!!")
                            } else {
                                alert("Fail!!")
                            }
                        }
                    })
                }
            })
        })
    </script>
}