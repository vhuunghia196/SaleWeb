@{
    ViewBag.Title = "Thống kê";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader {

    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Statistics Quantity</a>
        </li>
    </ul>
}
<h1>Statistics Quantity</h1>
<div style="width:40%; margin:auto">
    <canvas id="myChart"></canvas>
</div>


@section scripts {
    <script>
        $(document).ready(function () {
            $.ajax({
            url: '@Url.Action("getStatistics", "Statistics")',
            type: 'GET',
            dataType: 'json',
            success: function (data) {
                drawChartProductQuantity(data);
            }
        });
        })

        function drawChartProductQuantity(data) {
            var ctx = document.getElementById('myChart').getContext('2d');
            var myChart = new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: [data[0].CategoryName, data[1].CategoryName, data[2].CategoryName, data[3].CategoryName],
                    datasets: [{
                        label: '# of Votes',
                        data: [data[0].Quantity, data[1].Quantity, data[2].Quantity, data[2].Quantity],
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 206, 86, 0.2)',
                            'rgba(0, 206, 86, 0.2)'
                        ],
                        borderColor: [
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(0, 206, 86, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    title: {
                        display: true,
                        text: 'Biểu đồ tròn'
                    },
                    scales: {
                        yAxes: [{
                            ticks: {
                                beginAtZero: true
                            }
                        }]
                    }
                }
            });
        }

    </script>
}
