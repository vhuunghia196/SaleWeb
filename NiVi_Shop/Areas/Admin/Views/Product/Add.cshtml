@model NiVi_Shop.Areas.Admin.Controllers.ProductController.CombinedModelView

@{
    ViewBag.Title = "Add product";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader {

    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/product" class="nav-link">Product</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Add product</a>
        </li>
    </ul>
}
<div class="container-fluid">
    <div class="row">
        <!-- left column -->
        <div class="col-md-6">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">ADD PRODUCT</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                @using (Html.BeginForm("Add", "Products", FormMethod.Post, new { Action="/admin/product/add"}))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="card-body">

                        <div class="form-group">
                            <label for="exampleInputEmail1">Name</label>
                            @Html.TextBoxFor(m => m.Products.Name, new { @class = "form-control", @placeholder = "Name" })
                            @Html.ValidationMessageFor(m => m.Products.Name, "Please enter product name.")
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Price</label>
                            @Html.TextBoxFor(m => m.Products.Price, new { @class = "form-control", @placeholder = "Price", @type = "number" })
                            @Html.ValidationMessageFor(m => m.Products.Price, "Please enter product price.")
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Quantity</label>
                            @Html.TextBoxFor(m => m.Products.Quantity, new { @class = "form-control", @placeholder = "Quantity", @type = "number" })
                            @Html.ValidationMessageFor(m => m.Products.Quantity, "Please enter product quantity.")
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Detail</label>
                            @Html.TextAreaFor(m => m.Products.Detail, new { @id = "myTextarea", @class = "form-control", @name = "myTextarea", @rows = "5", @cols = "50" })
                            @Html.ValidationMessageFor(m => m.Products.Image, "Please enter product detail.", new { })
                        </div>
                        <div class="form-group">
                            <label for="exampleSelectRounded0">Supplier</label>
                            @Html.DropDownListFor(m => m.Products.SupplierID, new SelectList(Model.ShowModelView.Supplier, "SupplierID", "Name"), new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="exampleSelectRounded0">Category</label>
                            @Html.DropDownListFor(m => m.Products.CategoryID, new SelectList(Model.ShowModelView.Categories, "CategoryID", "CategoryName"), new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputFile">Image</label>
                            <div class="input-group">
                                <div class="custom-file">
                                    @Html.TextBoxFor(m => m.Products.Image, new { })
                                    @Html.ValidationMessageFor(m => m.Products.Image, "Please enter product image.", new { })
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-body -->

                    <div class="card-footer">
                        <a class="btn btn-danger" href="/admin/product">Back</a>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>