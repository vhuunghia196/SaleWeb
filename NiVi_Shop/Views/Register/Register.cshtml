@model NiVi_Shop.Models.User
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

@section head {
    <script src="~/Publics/js/jquery-3.6.0.min.js"></script>
    <script src="~/Publics/js/javascript.js"></script>
    <link href="~/Publics/css/Register.css?v=2" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" />
    <script src="https://www.google.com/recaptcha/api.js"></script>
}
<body>
    <div class="container custom">
        <div class="row">
            <div class="col-lg-10 col-xl-9 mx-auto">
                <div class="card flex-row my-5 border-0 shadow rounded-3 overflow-hidden">
                    <div class="card-img-left d-none d-md-flex">
                        <!-- Background image for card set in CSS! -->
                    </div>
                    <div class="card-body p-4 p-sm-5">
                        <h5 class="card-title text-center mb-5 fw-light fs-5"><strong>REGISTER</strong></h5>
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                @Html.ValidationSummary(false, "", new { @class = "alert-danger" })
                            </div>
                        }
                        @using (Html.BeginForm("Register", "Register", FormMethod.Post))
                        {
                            <div class="form-floating mb-3">
                                @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @id = "floatingInputUsername", @placeholder = "myusername", @required = "required", autofocus = "autofocus" })
                                @Html.LabelFor(model => model.Username, new { @for = "floatingInputUsername" })
                            </div>

                            <div class="form-floating mb-3">
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control", @id = "password", @placeholder = "Password", @required = "required" })
                                @Html.LabelFor(model => model.Password, new { @for = "password" })
                            </div>

                            <div class="form-floating mb-3">
                                <input type="password" class="form-control" id="confirmPassword" placeholder="Confirm Password" name="confirmPassword" required>
                                <label for="confirmPassword">Confirm Password</label>
                                <span id="passwordMatch"></span>
                            </div>

                            <div class="form-floating mb-3">
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @id = "floatingInputName", @placeholder = "NghiaVo" })
                                @Html.LabelFor(model => model.Name, new { @for = "floatingInputName" })
                            </div>

                            <div class="form-floating mb-3">
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @id = "floatingInputEmail", @placeholder = "name@example.com" })
                                @Html.LabelFor(model => model.Email, new { @for = "floatingInputEmail" })
                            </div>

                            <div class="form-floating mb-3">
                                @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control", @id = "phoneNumber", @placeholder = "037...", @required = "required" })
                                @Html.LabelFor(model => model.PhoneNumber, new { @for = "phoneNumber" })
                                <span id="phoneNumberError"></span>
                            </div>

                            <div class="form-floating mb-3">
                                @Html.TextBoxFor(model => model.Address, new { @class = "form-control", @id = "floatingAddress", @placeholder = "26 Street ...", @required = "required" })
                                @Html.LabelFor(model => model.Address, new { @for = "floatingAddress" })
                            </div>
                            <div class="g-recaptcha" data-sitekey="6LcxbbMlAAAAAKdhUCoiFult6kG881dCyeOBJE0Y"></div>
                            <div class="d-grid mb-2">
                                <button class="btn btn-lg btn-primary btn-login fw-bold text-uppercase" type="submit">Register</button>
                            </div>

                            <a class="d-block text-center mt-2 small" href="@Url.Action("Login", "Login")">Have an account? Sign In</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>





