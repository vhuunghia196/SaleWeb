@model NiVi_Shop.Models.User
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

@section head {

    <link href="~/Publics/css/Login.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <link href="~/Publics/css/all.min.css" rel="stylesheet" />
}

<div class="wrapper bg-white custom">
    <div class="h2 text-center">NiVi'Shop</div>
    <div class="h4 text-muted text-center pt-2">Enter your login details</div>
    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
    {
        <div class="form-group py-2">
            <div class="input-field">
                <span class="far fa-user p-2"></span>
                @Html.TextBoxFor(model => model.Username, new { placeholder = "Username", @class = "form-control", required = "required" })
            </div>
        </div>
        <div class="form-group py-1 pb-2">
            <div class="input-field">
                <span class="fas fa-lock p-2"></span>
                @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Password", required = "required", type = "password" } })
                <button class="btn bg-white text-muted">
                    <span class="far fa-eye-slash"></span>
                </button>
            </div>
        </div>
        <button type="submit" class="btn btn-block text-center my-3">Log in</button>
        <div class="text-center pt-3 text-muted">Not a member? <a href="@Url.Action("Register","Register")">Sign up</a></div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    }
</div>


